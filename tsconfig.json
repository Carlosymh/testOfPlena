{
    "compilerOptions": {
      "target": "es2020",
      "module": "commonjs",
      "moduleResolution": "node",
      "strict": true,
      "esModuleInterop": true,
      "skipLibCheck": true,
      "forceConsistentCasingInFileNames": true,
      "outDir": "./dist",
      "rootDir": "./src",
      "sourceMap": true,
      "baseUrl": "./src", // Opcional: si usas rutas relativas desde src
      "paths": {
        "*": ["*"] // Opcional: si usas rutas relativas desde src
      }
    },
    "include": ["src/**/*.ts"],
    "exclude": ["node_modules"]
  }